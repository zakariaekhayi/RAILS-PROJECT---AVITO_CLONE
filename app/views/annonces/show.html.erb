<div class="container mx-auto px-4 py-8">
  <div class="mb-4">
    <%= link_to "‚Üê Retour aux annonces", annonces_path, class: "text-blue-600 hover:underline" %>
  </div>

  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <% if @annonce.image.present? %>
      <img src="<%= @annonce.image %>" alt="<%= @annonce.titre %>" class="w-full h-96 object-cover">
    <% end %>
    
    <div class="p-6">
      <h1 class="text-3xl font-bold mb-2"><%= @annonce.titre %></h1>
      <p class="text-2xl font-bold text-green-600 mb-4"><%= number_to_currency(@annonce.prix, unit: "MAD ", precision: 0) %></p>
      
      <div class="flex items-center text-gray-600 mb-6">
        <span class="mr-4"><%= @annonce.categorie %></span>
        <span class="mr-4">|</span>
        <span><%= @annonce.ville %></span>
      </div>
      
      <div class="border-t pt-4 mb-6">
        <h2 class="text-xl font-semibold mb-2">Description</h2>
        <div class="text-gray-700 whitespace-pre-line">
          <%= @annonce.description %>
        </div>
      </div>
      
      <div class="border-t pt-4">
        <p class="text-gray-600">Publi√© par <%= @annonce.user.username %></p>
        <p class="text-gray-500 text-sm">Contact: <%= @annonce.user.phone_number %></p>
        <p class="text-gray-500 text-sm">Email: <%= @annonce.user.email %></p>
        <p class="text-gray-500 text-sm">Date de publication: <%= @annonce.created_at.strftime("%d/%m/%Y") %></p>
      </div>
      
      <% if user_signed_in? && @annonce.user == current_user %>
        <div class="mt-6 flex space-x-4">
          <%= link_to "Modifier", edit_annonce_path(@annonce), class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
          <%= button_to "Supprimer", annonce_path(@annonce), method: :delete, data: { confirm: "√ätes-vous s√ªr de vouloir supprimer cette annonce?" }, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
          <%= link_to 'üè† Retour √† l\'accueil', root_path, style: "display: inline-block; margin-bottom: 20px;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>